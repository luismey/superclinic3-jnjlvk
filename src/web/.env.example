# Application Environment
# Required: Must be one of: 'development', 'staging', 'production'
NODE_ENV=development

# API Configuration
# Required: Backend API endpoint URL (must be HTTPS in production)
NEXT_PUBLIC_API_URL=https://api.example.com/api/v1

# WebSocket Configuration
# Required: WebSocket server URL (wss:// in production)
NEXT_PUBLIC_WS_URL=wss://api.example.com/api/v1/ws

# WhatsApp Service Configuration
# Required: WhatsApp Web service endpoint
NEXT_PUBLIC_WHATSAPP_WEB_URL=https://whatsapp-web.example.com/api/v1

# Required: WhatsApp Business API endpoint
NEXT_PUBLIC_WHATSAPP_API_URL=https://whatsapp-api.example.com/api/v1

# OpenAI Configuration
# Required: OpenAI API key for AI assistant features
# Warning: Keep this secure and never commit actual key
NEXT_PUBLIC_OPENAI_API_KEY=sk-your-openai-api-key

# Firebase Configuration
# Required: Firebase project configuration
# Note: All fields below are required for Firebase initialization
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Analytics Configuration
# Required: Google Analytics measurement ID
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# Error Tracking Configuration
# Optional: Sentry DSN for error reporting
# Format: https://<key>@<organization>.ingest.sentry.io/<project>
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
# Optional: JSON string of feature flags configuration
# Example: {"newFeature": true, "betaFeature": false}
NEXT_PUBLIC_FEATURE_FLAGS={"enableNewChat": false, "enableBetaFeatures": false}

# Debug Configuration
# Optional: Enable debug mode for additional logging
# Default: false in production, true in development
NEXT_PUBLIC_DEBUG_MODE=true

# Rate Limiting Configuration
# Required: Based on WhatsApp API limitations
# Note: Values aligned with WHATSAPP_CONSTANTS
NEXT_PUBLIC_RATE_LIMIT_DAY=1000
NEXT_PUBLIC_RATE_LIMIT_MINUTE=60
NEXT_PUBLIC_MIN_DELAY_MS=1000

# Cache Configuration
# Optional: Cache duration in seconds
# Default: 300 (5 minutes)
NEXT_PUBLIC_CACHE_DURATION=300

# API Timeout Configuration
# Optional: API request timeout in milliseconds
# Default: 30000 (30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Retry Configuration
# Optional: Number of retry attempts for failed requests
# Default: 3
NEXT_PUBLIC_RETRY_ATTEMPTS=3